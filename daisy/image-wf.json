{
    "Name": "custom-image",
    "Vars": {
        "startupScript": "gs://cool-bucket",
        "baseImage": "projects/gcp-project/global/images/image-1",
        "builtImageName": "custom_image",
        "ansibleGitRepo": "https://github.com/ansible/ansible.git"
      },
    "Sources": {
        "custom.sh": "${startupScript}"
    },
    "Steps": {
        "create-disks": {
            "CreateDisks": [
                {
                    "Name": "disk-install",
                    "SourceImage": "${baseImage}",
                    "Type": "pd-ssd"
                }
            ]
        },
        "create-inst-install": {
            "CreateInstances": [
                {
                    "Name": "inst-install",
                    "Disks": [{"Source": "disk-install"}],
                    "MachineType": "n1-standard-1",
                    "StartupScript": "custom.sh",
                    "Metadata": {"ansible_git_repo": "${ansibleGitRepo}"}
                }
            ]
        },
        "wait-for-inst-install": {
            "TimeOut": "1h",
            "waitForInstancesSignal": [
                {
                    "Name": "inst-install",
                    "Stopped": true
                }
            ]
        },
        "create-image": {
            "CreateImages": [
                {
                    "Name": "${builtImageName}",
                    "SourceDisk": "disk-install",
                    "NoCleanup": true,
                    "ExactName": true
                }
            ]
        },
        "delete-inst-install": {
            "DeleteResources": {
                "Instances": ["inst-install"]
            }
        }
    },
    "Dependencies": {
        "create-inst-install": ["create-disks"],
        "wait-for-inst-install": ["create-inst-install"],
        "create-image": ["wait-for-inst-install"],
        "delete-inst-install": ["create-image"]
    }
}